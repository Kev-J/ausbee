		DEVICE_STM32F10X_MD || DEVICE_STM32F10X_MD_VL || \
		DEVICE_STM32F10X_HD || DEVICE_STM32F10X_HD_VL || \
		DEVICE_STM32F10X_XL || DEVICE_STM32F10X_CL
	help
		TODO

